#!/bin/sh

# keyboard
setxkbmap -layout pt

# DPMS & session lock
xset dpms 180 0 0
xss-lock -- screenlock &

# compositor & background
picom &
nitrogen --random --set-centered

# notifications
dunst &

# media auto-mounting
udiskie &

# system tray
nm-applet &
blueman-applet &
cbatticon &
volumeicon &
redshift-gtk &
