#!/bin/sh

# some Spaceduck colors
background='#0f111baa'
foreground='#ecf0c1aa'
red='#e33400aa'
green='#5ccc96aa'
blue='#00a3ccaa'

clr='#00000000'

i3lock \
  --blur=5 \
  --indicator \
  --pass-media-keys \
  --pass-volume-keys \
  --insidevercolor=$clr \
  --insidewrongcolor=$clr \
  --insidecolor=$clr \
  --ringvercolor=$green \
  --ringwrongcolor=$red \
  --ringcolor=$blue \
  --line-uses-inside \
  --keyhlcolor=$foreground \
  --bshlcolor=$background \
  --separatorcolor=$clr \
  --veriftext='' \
  --wrongtext='' \
  --noinputtext='' \
  --locktext='' \
  --lockfailedtext='' \
  --radius 150 \
  --ring-width 50
